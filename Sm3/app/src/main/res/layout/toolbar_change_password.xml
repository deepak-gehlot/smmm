<android.support.v7.widget.Toolbar
    xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/ToolBarStyle"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#323b44"
    android:minHeight="@dimen/abc_action_bar_default_height_material">

    <RelativeLayout
        android:layout_width="match_parent"
        android:background="#323b44"
        android:layout_height="@dimen/abc_action_bar_default_height_material">
        <ImageView
            android:id="@+id/img_back"
            android:paddingRight="10dp"
            android:background="@drawable/new_action_bar_btn"
            android:layout_alignParentLeft="true"
            android:layout_width="@dimen/abc_action_bar_default_height_material"
            android:src="@drawable/header_back"
            android:layout_height="@dimen/abc_action_bar_default_height_material"
            android:scaleType="centerInside"/>
        <rws.sm3.app.CustomWidget.CustomTextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toRightOf="@+id/ty"
            android:visibility="gone"
            android:layout_toLeftOf="@+id/toggle_btn"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#ffffff"
            android:gravity="center_vertical|center_horizontal"
            android:layout_centerInParent="true"/>

        <ImageView
            android:id="@+id/logos"
            android:src="@drawable/logo"
            android:visibility="visible"
            android:padding="5dp"
            android:layout_toLeftOf="@+id/toggle_btn"
            android:layout_toRightOf="@+id/ty"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
        <ImageView
            android:id="@+id/toggle_btn"
            android:visibility="invisible"
            android:paddingRight="10dp"
            android:layout_alignParentRight="true"
            android:layout_width="@dimen/abc_action_bar_default_height_material"
            android:src="@drawable/header_drawer"
            android:background="@drawable/new_action_bar_btn"
            android:layout_height="@dimen/abc_action_bar_default_height_material"
            android:scaleType="centerInside"/>
    </RelativeLayout>

</android.support.v7.widget.Toolbar>
